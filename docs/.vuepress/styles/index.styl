$fontA = 'Montserrat', sans-serif
$fontB = 'Exo', sans-serif
$highlight = #eff7ad

mjx-container
    font-size 1.5rem
    background $highlight
    padding .5rem

body, html
    background-image url('/img/paper.png')
    font-size .95rem !important
    @media (max-width $MQMobile)
        letter-spacing -1px
        font-size .85rem !important
        overflow-wrap: break-word

a
    outline none

p
    transition .3s
    @media (max-width $MQMobile)
        font-size 1.15rem

h2, h1
    transition .2s
    
h1
    font-size 2.75rem
    color lighten($textColor, 20%)
    margin-bottom 2.5rem
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
    @media (max-width $MQMobile)
        font-size 2.25rem
        
h1:first-child
    margin-top -.25rem !important
        
    
h2
    color lighten($textColor, 10%)
    

.header-anchor
    display none

em
    background $highlight
    font-style normal
    padding .2rem
    font-weight bold
    transition background-color 2.3s

img
    filter grayscale(100%) sepia(30%) contrast(90%) brightness(90%)

.navbar
    border-bottom none !important
    opacity .975
    box-shadow 2px 0px 3px $textColor
    background-color #222 !important

.navbar, .navbar .links
    font-family $fontA
    .nav-link
        color #ddd !important
    .nav-link:hover
        border-bottom 2px solid $highlight !important

    .site-name
        color #ddd !important
        font-size 2.5rem !important


    a.nav-link.router-link-exact-active.router-link-active
        border-bottom 2px solid $highlight !important
        

.navbar .links
    background-color transparent !important

.nav-links
    color #eee !important

.sidebar-button
    color #eee 

.navbar
    border-bottom none !important
    box-shadow none !important

.sidebar
    background-color #222 !important
    background linear-gradient(135deg, #222 36%, #444 100%) !important
    opacity .975

    span 
        color #eee
        font-size 1.25rem
        
        
    ul
        font-size 1rem
        font-style normal

    span:hover
        color $highlight
        

    .sidebar-link
        color #eee
        border-bottom none !important 
        
    .sidebar-link:hover
        color $highlight

     a.active.sidebar-link 
        color $highlight
        border none !important 
        


.page
    h2
        display inline-block
        border-bottom none !important
        padding 4.5rem 1rem 0 1rem !important
        margin-top -.75rem !important
        margin-left -1.5rem !important

        @media (max-width $MQNarrow)
            margin-left -1.2rem !important

        

.home

    padding 0 !important
    margin 0 !important
    max-width 100vw !important
    background #7d7573

    .description, .footer, #main-title
        color #000 !important

    .footer
        border-top none !important

    .hero
        padding 1rem 0
        background #7d7573
        background-image url('/img/hero.jpg')
        background-image linear-gradient(to bottom, rgba(0,0,0,0) 0%,rgba(103,96,94,0) 75%,rgba(125,117,115,1) 100%), url('/img/hero.jpg')
        background-size cover
        background-repeat no-repeat
        background-position center
        
        img
            margin-top 7rem !important

    #main-title
        position relative
        font-size 6rem !important
        font-style italic
        text-shadow 2px 3px 3px #777 !important
        @media (max-width $MQMobile)
            font-size 4.5rem !important
            
    #main-title:after
        position absolute
        margin-left -.75rem
        margin-top -.25rem
        content 'BE'
        color #eee !important
        background tint($accentColor, 20%)
        border-radius 50%
        padding .5rem
        font-size 1.75rem
        text-shadow none
        border 1px solid #333
        box-shadow 2px -1px 3px #333
        overflow hidden
        transform rotate(-2deg) !important
        @media (max-width $MQMobile)
            margin-left -1.5rem
            margin-top -1rem

    .description
        font-size 2.3rem !important
        text-shadow 2px 3px 3px #777 !important
        margin-top -2rem !important
        @media (max-width $MQMobile)
            font-size 1.8rem !important

.inhaltsangabe .page .theme-default-content
    max-width 100vw
    

#inhalt
    padding 2rem
    padding-top 4rem
    display grid
    grid-template-columns: 1fr 1fr
    grid-gap 2rem

    @media (max-width $MQMobile)
        grid-template-columns: 1fr
        grid-gap 1rem
        padding 1rem
        padding-top 5rem

.thema
    h1
        background #111
        color white
        padding .5rem 1.5rem
        margin 0
        font-size 2.5rem
        font-style italic
        height 3.25rem
        opacity .85
        @media (max-width $MQMobile)
            font-size 2.25rem

    img
        min-widht 100%
        filter grayscale(100%) sepia(30%) contrast(90%) brightness(90%) !important

.thema-unterpunkt h2
    background #222
    color white
    padding .5rem .75rem 
    margin 1px 0
    border-bottom 0 
    font-size 1.25rem
    font-style normal 
    
.thema-unterpunkt h2:hover
    background #eff7ad
    color black

.thema-unterpunkt h2::before
    content: ">"
    

.unterpunkte
    margin-top -.25rem

.site-name, .sidebar-group, .hero .description
    font-family $fontB
    font-style italic
    
.site-name
    position relative
    top .25rem

.sidebar-group
    font-size 1.25rem

body, html
    font-family $fontA

h1, h2, h3
    font-family $fontB
    font-style italic


iframe
    display flex
    min-width 100%
    max-width 100%
    width 100%
    height 50vh
    min-height 200px
    @media (max-width $MQMobile)
        height 25vh
