$fontA = 'Inconsolata', monospace
$fontB = 'Amatic SC', cursive;
$highlight = #eff7ad

body, html
    @media (max-width $MQMobile)
        letter-spacing -1px
        font-size .95rem !important
        overflow-wrap: break-word

a
    outline none

.header-anchor
    display none

em
    background $highlight
    font-style normal
    padding .2rem
    font-weight bold

.navbar
    border-bottom none !important
    opacity .975
    box-shadow 2px 0px 3px $textColor
    background-color #222 !important


.navbar, .navbar .links
    font-family $fontA
    .nav-link
        color #ddd !important
    .nav-link:hover
        border-bottom 2px solid $highlight !important

    .site-name
        color #ddd !important
        font-size 2.5rem !important


    a.nav-link.router-link-exact-active.router-link-active
        border-bottom 2px solid $highlight !important
        

.navbar .links
    background-color transparent !important

.nav-links
    color #eee !important

.sidebar-button
    color #eee 

.navbar
    border-bottom none !important
    box-shadow none !important

.sidebar
    background-color #222 !important
    background linear-gradient(135deg, #222 36%, #333 100%) !important
    opacity .975

    span 
        color #eee

    span:hover
        color $highlight
        

    .sidebar-link
        color #eee
        border-bottom none !important 
        
    .sidebar-link:hover
        color $highlight

     a.active.sidebar-link 
        color $highlight
        border none !important 
        


.page
    h2
        color #eee !important
        display inline-block
        transform rotate(-1.2deg) !important
        border-bottom none !important
        // background #333
        padding 4.5rem 1rem 0 1rem !important
        // margin-top 2rem !important
        margin-left -.75rem !important
        @media (max-width $MQNarrow)
            margin-left -.25rem !important

.page h2:before
    position absolute
    content attr(id)
    color #333
    background #333
    display inline
    z-index -1
    width 100%
    margin-left -1rem

    .header-anchor
        color $highlight


        

.home

    padding 0 !important
    margin 0 !important
    max-width 100vw !important
    background #7d7573

    .description, .footer, #main-title
        color #000 !important

    .footer
        border-top none !important

    .hero
        padding 1rem 0
        background #7d7573
        background-image url('/img/hero.jpg')
        background-image linear-gradient(to bottom, rgba(0,0,0,0) 0%,rgba(103,96,94,0) 75%,rgba(125,117,115,1) 100%), url('/img/hero.jpg')
        background-size cover
        background-repeat no-repeat
        background-position center
        
        img
            margin-top 7rem !important

    #main-title
        font-size 6rem !important
        text-shadow 2px 3px 3px #777 !important

    .description
        font-size 2.1rem !important
        text-shadow 2px 3px 3px #777 !important
        margin-top -2rem !important

.inhaltsangabe .page .theme-default-content
    max-width 100vw
    

#inhalt
    padding 2rem
    padding-top 4rem
    display grid
    grid-template-columns: 1fr 1fr
    grid-gap 2rem

    @media (max-width $MQMobile)
        grid-template-columns: 1fr
        grid-gap 1rem
        padding 1rem
        padding-top 5rem

.thema
    h1
        background #111
        color white
        padding 0 1rem
        margin 0
        font-size 3rem
        height 4rem
        opacity .85

    img
        min-widht 100%
        filter grayscale(100%) sepia(30%) contrast(90%) brightness(90%)

.thema-unterpunkt h2
    background #222
    color white
    padding .25rem .5rem 
    margin 1px 0
    border-bottom 0 
    
.thema-unterpunkt h2:hover
    background #eff7ad
    color black

.thema-unterpunkt h2::before
    content: ">"
    

.unterpunkte
    margin-top -.25rem

.site-name, .sidebar-group, .hero .description
    font-family $fontB

.sidebar-group
    font-size 1.25rem

body, html
    font-family $fontA

h1, h2, h3
    font-family $fontB


iframe
    display flex
    min-width 100%
    max-width 100%
    width 100%
    height 50vh
    min-height 200px
    @media (max-width $MQMobile)
        height 25vh
